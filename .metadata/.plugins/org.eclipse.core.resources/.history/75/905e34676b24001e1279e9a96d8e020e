package p2023_07_17;

public class MethodEx03 {

	// 키보드로 입력한 2개의 정수 중에서 최대값과 최소값을 구하는 프로그램을 작성
	// 단, 메소드를 이용해서 작성하세요.

	// 최대값을 구하는 메소드

	static int max(int a, int b) {
		if (a > b) {
			return a;
		} else {
			return b;
		}
	}

	static int min(int a, int b) {
		if (a < b) {
			return a;
		} else {
			return b;
		}
	}

	// 최소값을 구하는 메소드

	public static void main(String[] args) {

	}
}
